import java.nio.file.FileSystems;
import java.util.Arrays;
import java.util.List;
import java.io.IOException;
import java.nio.file.*;

public class Example {

	public static void main(String[] args) {
		
		Path file = FileSystems.getDefault().getPath("", "input.txt");
		try {
			int count = 0;
			
			List<String> lines = Files.readAllLines(file);
			int[] measurements = new int[lines.size()];
			
			//System.out.println(lines.size());
			for(int i = 0; i < lines.size(); i++) {				
				measurements[i] = Integer.parseInt(lines.get(i));
			
			}
			var firstNumber = measurements[0];
			var secondNumber = measurements[1];
			var thirdNumber = measurements[2];
			
			var currentSum = firstNumber + secondNumber + thirdNumber;
			
			for(int j = 3; j < measurements.length; j++) {
				var next = measurements[j];
				var nextSum = secondNumber + thirdNumber + next;
				
				if(nextSum > currentSum) {
					count+= 1;
					currentSum = nextSum;
					secondNumber = thirdNumber;
					thirdNumber = next;
				} else {
					currentSum = nextSum;
					secondNumber = thirdNumber;
					thirdNumber = next;
				}

			}
			System.out.println(count);

		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
}
